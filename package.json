{
  "name": "flndr",
  "version": "1.0.0",
  "description": "Fast Lightning Network Devkit for Rookies - A browser-compatible LND client",
  "main": "dist/index.js",
  "browser": "dist/browser.js",
  "module": "dist/browser.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/browser.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./browser": {
      "import": "./dist/browser.js",
      "types": "./dist/browser.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:browser": "tsc -p tsconfig.browser.json",
    "prepublishOnly": "npm run build && npm run build:browser",
    "test": "jest",
    "test:info": "jest --testPathPattern=src/__tests__/info",
    "test:invoice": "jest --testPathPattern=src/__tests__/invoice",
    "test:payments": "jest --testPathPattern=src/__tests__/payments",
    "test:monitoring": "jest --testPathPattern=src/__tests__/monitoring",
    "test:custom": "jest --testPathPattern=src/__tests__/custom",
    "test:browser": "jest --testPathPattern=src/__tests__/browser",
    "lint": "eslint src/**/*.ts",
    "examples": "ts-node src/examples/index.ts",
    "examples:monitoring:streaming": "ts-node -e \"require('./src/examples/monitoring/streamingExample').default()\"",
    "examples:monitoring:mocked": "ts-node -e \"require('./src/examples/monitoring/mockedStreamingExample').default()\"",
    "examples:monitoring:all": "ts-node src/examples/monitoring/run.ts all",
    "examples:monitoring:enhanced": "ts-node src/examples/monitoring/enhancedStreamingExample.ts"
  },
  "keywords": [
    "lightning",
    "bitcoin",
    "lnd",
    "lightning-network",
    "rest-api",
    "browser"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/ws": "^8.5.5",
    "dotenv": "^16.3.1",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "optionalDependencies": {
    "ws": "^8.13.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/examples/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
